<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignTop="@id/textAppName"
        android:layout_alignBottom="@id/textAppName"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_app_16"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/imageIcon"
        android:text="@string/app_name"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imageCover"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_below="@id/textAppName"
        android:layout_alignParentStart="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="4dp"
        android:adjustViewBounds="true"
        android:padding="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/noimage"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageCover"
        android:layout_margin="4dp"
        android:layout_toStartOf="@id/btnPlay"
        android:layout_toEndOf="@id/imageCover"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:text="Memories" />

    <TextView
        android:id="@+id/textArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTitle"
        android:layout_alignStart="@id/textTitle"
        android:layout_alignEnd="@id/textTitle"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        tools:text="Maroon 5" />

    <ImageButton
        android:id="@+id/btnPlay"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignTop="@id/imageCover"
        android:layout_alignBottom="@id/imageCover"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toStartOf="@id/btnNext"
        app:srcCompat="@drawable/ic_play_arrow_24dp" />

    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignTop="@id/imageCover"
        android:layout_alignBottom="@id/imageCover"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:srcCompat="@drawable/ic_skip_next_24dp" />
</RelativeLayout>